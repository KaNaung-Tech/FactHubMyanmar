{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2016", "DOM"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES5",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "@nozbe/watermelondb/*": ["../../src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
